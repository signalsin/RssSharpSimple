<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="RssSharpSimple.Home" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="RssSharpSimple"
	Height="403"
	Width="909">
	<Grid>
		<ListBox
			Name="lstResults"
			DisplayMemberPath="Title.Text"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="8,69,0,0"
			Width="274"
			Height="294" />
		<TextBox
			Name="txtUrl"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			Grid.Row="0"
			VerticalAlignment="Top"
			Height="20"
			Width="274"
			HorizontalAlignment="Left"
			Margin="8,8,0,0" />
		<Button
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="8,37,0,0"
			Width="75"
			Height="23"
			Name="btnSubmit"
			TextSearch.Text=""
			Content="Search"
			Click="btnSubmit_Click"
			Grid.ColumnSpan="2" />
		<Frame
			Name="frmContents"
			Source="{Binding SelectedItem.Links[0].Uri, ElementName=lstResults}"
			Grid.Column="2"
			NavigationUIVisibility="Visible"
			VerticalAlignment="Stretch"
			HorizontalAlignment="Left" />
		<Grid.ColumnDefinitions>
			<ColumnDefinition
				Width="0.329876498629073*" />
			<ColumnDefinition
				Width="0.670123501370927*" />
		</Grid.ColumnDefinitions>
	</Grid>
</Window>